<!DOCTYPE html>
<html lang="en">
<head>
    <title>Add Resource Page</title>

    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
    <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
    <link rel="stylesheet" href="/styles/layout.css" type="text/css" />
    <link rel="stylesheet" href="/styles/landing_page.css" type="text/css" />

    <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
    <script type="text/javascript" src="/scripts/app.js"></script>
    <!-- Link to add Bootstrap (can remove after changing back to .ejs file) -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
</head>


<body style= "background-color: #EAEBEE">
    <div class= "center-text">
      <div class="virtual-logo"></div>
</div>


    <div class="logo"></div>
    <div class="login-container">
        <main class="login-form">
          <form action="/add_resource" method="POST">
            <div>
              <label class= "login-labels" for="url">URL</label>
              <div>
                <input type="url" id="url" class="form-control input-fields" name="url" required autofocus>
              </div>
            </div>
            <div>
              <label class= "login-labels" for="title">Title</label>
              <div>
                <input type="text"  id="title" class="form-control input-fields" name="title" required>
              </div>
              <div>
                  <label class= "login-labels" for="description">Description</label>
                  <div>
                    <input type="text"  id="description" class="form-control input-fields" name="description" required>
                  </div>
              </div>
              <div>
                  <label for="category" class="login-labels">Category</label>
                      <div>
                          <select id = "myList">
                            <option value = "0">Select Category</option>
                            <option value = "1">Language</option>
                            <option value = "2">Music</option>
                            <option value = "3">Travel</option>
                            <option value = "4">Cooking</option>
                            <option value = "5">Gardening</option>
                            <option value = "6">Coding</option>
                            <option value = "7">Religion</option>
                            <option value = "8">History</option>
                            <option value = "9">Health and Fitness</option>
                            <option value = "10">Sports</option>
                            <option value = "11">Home Renovations</option>
                            <option value = "12">Project Management</option>
                            <option value = "12">Other</option>
                          </select>
                      </div>
                  </div>
                <button class="login-button" type="submit">
                  Create New Resource
                </button>
              </div>
          </form>
        </main>
      </div>
  </body>
</html>
